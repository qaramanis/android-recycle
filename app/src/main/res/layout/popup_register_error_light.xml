<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_register_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_menu_background_light"
    android:visibility="visible"
    tools:visibility="visible">


    <TextView
        android:id="@+id/takenUsernameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username is already taken"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retryUsernameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/retry"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/takenUsernameTxt"
        app:layout_constraintStart_toStartOf="@+id/takenUsernameTxt"
        app:layout_constraintTop_toBottomOf="@+id/takenUsernameTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>